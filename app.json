{
  "expo": {
    "name": "EDUCAFRIC",
    "slug": "educafric",
    "owner": "broximo",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./public/android-icon-192x192.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./public/splash-icon-512x512.png",
      "resizeMode": "contain",
      "backgroundColor": "#7C5CFC"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.educafric.app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./public/android-icon-192x192.png",
        "backgroundColor": "#7C5CFC"
      },
      "package": "com.educafric.app",
      "versionCode": 2,
      "permissions": [
        "INTERNET",
        "ACCESS_NETWORK_STATE",
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "VIBRATE",
        "RECEIVE_BOOT_COMPLETED",
        "FOREGROUND_SERVICE"
      ],
      "useNextNotificationsApi": true
    },
    "web": {
      "favicon": "./public/favicon.ico",
      "bundler": "metro"
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "icon": "./public/android-icon-192x192.png",
          "color": "#7C5CFC"
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Cette application utilise la localisation pour la sécurité des étudiants et le suivi de présence.",
          "isAndroidBackgroundLocationEnabled": true
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "educafric-cameroon-app"
      }
    }
  }
}
